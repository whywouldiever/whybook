
.container-about {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    background-color: #f8f8f8;
}
.top {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 60rpx;
}
.icon {
    width: 120rpx;
    height: 120rpx;
}
.title {
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 24rpx;
}
.bottom {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.text {
    font-size: 14px;
    font-family: '黑体';
    color: #333333;
    text-align: left;
    margin: 10rpx;
    text-indent: 2em;
}
.support {
    position: fixed;
    bottom: 16rpx;
}
.support-text {
    font-size: 24rpx;
    color: #999999;
}

